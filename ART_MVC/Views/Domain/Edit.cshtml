@model DomainViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 offset-1">


            <div class="col-md-6 align-content-end shadow-lg rounded pl-5 pr-5 pb-3 offset-1">
                <h4 class="card-header-pills">Update Domain Details</h4>
                <form asp-controller="Domain" asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" asp-for="@Model.ProjectName" />
                    <input type="hidden" asp-for="@Model.ProjectFkId" />
                    <input type="hidden" asp-for="@Model.EmployeeId" />
                    <input type="hidden" asp-for="@Model.Age" />
                  
                    <div class="form-group">
                        <label asp-for="DomainName">Domain Name</label>
                        <input type="text" asp-for="DomainName" placeholder="Enter Name" class="form-control" />
                        <span asp-validation-for="DomainName" class="text-bg-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="SkillSetRequired">skills Required</label>
                        <input type="text" asp-for="SkillSetRequired" placeholder="Skills reuired" class="form-control" />
                        <span asp-validation-for="SkillSetRequired" class="text-bg-danger"></span>

                    </div>
                  

                    <div class="form-group">
                        <label asp-for="Status">Status</label>
                        <select asp-for="Status" class="dropdown btn btn-outline-dark w-100">
                            <option value="">--Select--</option>
                            <option value="OPEN">OPEN</option>
                            <option value="HOLD">HOLD</option>
                            <option value="CLOSED">CLOSED</option>
                            <option value="CANCELLED">CANCELLED</option>

                        </select>             
                        <span asp-validation-for="Status" class="text-bg-danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="Grade">Grade</label>
                        <select asp-for="Grade" class="dropdown btn btn-outline-dark w-100">
                            <option value="">--Select--</option>
                            <option value="E1">E1</option>
                            <option value="E2">E2</option>
                            <option value="E3">E3</option>
                            <option value="E4">E4</option>

                        </select>         
                        <span asp-validation-for="Grade" class="text-bg-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SkillSetRequired" class="form-label">Skills Required:</label><br />
                        <input type="text" asp-for="SkillSetRequired" placeholder="Enter skills required" class="form-control" />
                        <span asp-validation-for="SkillSetRequired" class="text-bg-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ApprovedDate" class="form-label">Approved Date:</label><br />
                        <input type="date" asp-for="ApprovedDate" placeholder="Approved Date" class="form-control" />
                        <span asp-validation-for="ApprovedDate" class="text-bg-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="No_Of_Positions" class="form-label">Positions Required :</label><br />
                        <input type="text" asp-for="No_Of_Positions" placeholder="postions required" class="form-control" />
                        <span asp-validation-for="No_Of_Positions" class="text-bg-danger"></span>
                    </div>


                     <div class="form-group">
                        <label asp-for="JobDescription" class="form-label">Enter Job Description :</label><br />
                        <textarea rows="5" asp-for="JobDescription" class="form-control" placeholder="Enter Job Description">@Model.JobDescription</textarea>
                        <span asp-validation-for="JobDescription" class="text-bg-danger"></span>
                    </div>



                    <br />

                    <div class="form-group">
                        @*<input type="submit" class="=btn btn-dark float-right" value="Add Property" />*@
                        <button type="submit" class="btn btn-dark" value="Add Domain">Update Domain</button>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}



