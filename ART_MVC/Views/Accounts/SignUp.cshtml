@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
}




<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
 
</head>
<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>
<div class="container">
    <div class="col-md-4"></div>
<form asp-controller="Accounts" asp-action="SignUp" method="post">
   
    <div class="row ">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" asp-for="Name" class="form-control" style="width:326px" />
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="text" asp-for="Email" class="form-control" style="width:326px" />
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" asp-for="Password" class="form-control" style="width:326px" />
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>

              <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" style="width:326px" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

          
            <div class="mt-3 d-grid">

                <input type="submit" class="btn btn-primary" value="Rigister" />
            </div>
        </div>
    </div>
    <div>
        <a asp-controller="Accounts" asp-action="Login">Back to Login </a>
    </div>

</form>
</div>
@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
